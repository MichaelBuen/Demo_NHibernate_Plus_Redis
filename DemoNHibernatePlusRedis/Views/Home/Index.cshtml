<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
}



<h2>Index</h2>


<button>Test</button>



<script type="text/javascript">
    $(function () {


        $('button').click(function () {
            test();
        });


        function test() {

            var start = new Date().getTime();

            var content = $('table > tbody');

            var repeat = 200;

            var z = 0;
            for (i = 1; i <= repeat; ++i) {

                $.ajax({ url: '/Home/People', success: function (data) {

                    ++z;

                    if (z == repeat) {
                        var elapsed = new Date().getTime() - start;
                        $('#hei').text(elapsed);
                    }

                    content.empty();

                    for (var x in data) {
                        var p = data[x];

                        var newRow = $('<tr/>');
                        var tdN = $('<td/>').text(z);
                        var tdLastname = $('<td/>').text(p.PersonName);
                        var tdFirstname = $('<td/>').text(p.BornedAt);

                        newRow.append(tdN).append(tdLastname).append(tdFirstname);


                        content.append(newRow);



                    }

                }, async: true
                , error: function (a, b, c) { alert(a); }
                });
            }


        }




    });
</script>


<table>
<thead><tr><th>N</th><th>Person</th><th>Country</th></tr></thead>
<tbody>
    
</tbody>
</table>


