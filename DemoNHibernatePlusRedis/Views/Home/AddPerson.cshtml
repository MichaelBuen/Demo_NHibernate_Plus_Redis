<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>



<script>
    $(function () {
        $('#sbm').click(function (e) {
            e.preventDefault();

            $.ajax({
                type: 'POST',
                url: '/Home/AddPerson',
                data: $('#rec').serialize(),
                dataType: 'text',
                success: function (data) {
                    $('#sts').text('Success ' + data);
                },
                error: function (a, b, c) {
                    $('#sts').text('Error ' + a);
                }

            });
        });
    });
</script>


<form method="post" id='rec'>
    <input type="text" name="PersonName" />
    <input type='submit' value='Add' id='sbm'/>
</form>


<br />
Add status: [<span id='sts'></span>]<br />